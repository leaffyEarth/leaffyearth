{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "index.ts",
        "src/index.ts"
    ]
}